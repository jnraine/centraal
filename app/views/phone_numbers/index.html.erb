<h1>Phone Numbers</h1>

<table class="table">
  <thead>
    <th>Incoming Number</th>
    <th>Forwarding Number</th>
    <th>Forwarding</th>
    <th>Voicemail</th>
    <th>Actions</th>
  </thead>

  <% @phone_numbers.each do |phone_number| %>
    <%= bootstrap_form_for phone_number do |f| %>
      <tr>
        <td><%= phone_number.incoming_number %></td>
        <td><%= f.text_field :forwarding_number, edit_on_click: true %></td>
        <td><%= f.on_off :forwarding %></td>
        <td><%= f.on_off :voicemail %></td>
        <td><%= link_to edit_icon, edit_phone_number_path(phone_number) %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<%= button icon(name: "refresh", label: "Sync Numbers"), import_phone_numbers_path, method: :post, data: {"spin-on-click" => true, "click-text" => "Syncing..."} %>