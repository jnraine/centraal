<h1><%= icon(name: "phone") %> <%= @phone_number.incoming_number %></h1>

<%= form_for @phone_number do |f| %>
  <div class="control-group">
    <%= f.label :forwarding_number %>
    <div class="controls">
      <%= f.text_field :forwarding_number %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :voicemail %>
    <div class="controls">
      <div class="switch switch-small">
        <%= f.check_box :voicemail %>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :forwarding %>
    <div class="controls">
      <div class="switch switch-small">
        <%= f.check_box :forwarding %>
      </div>
    </div>
  </div>

  <%= f.submit "Save Changes", :class => "btn btn-primary" %>
<% end %>