<h3><%= icon(name: "phone") %> <%= @phone.incoming_number %></h3>

<%= bootstrap_form_for @phone do |f| %>
  <div class="control-group">
    <%= f.label :forwarding_number %>
    <div class="controls">
      <%= f.text_field :forwarding_number, value: @phone.forwarding_number %>
    </div>
  </div>
  <%= f.text_field :forwarding_number, edit_on_click: true %>
  <%= f.on_off :voicemail, labelled: true %>
  <%= f.on_off :forwarding, labelled: true %>

  <%= content_tag :div, class: "form-actions" do %>
    <%= f.save_changes %>
  <% end %>
<% end %>
